<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <color name="gridSelected">@color/md_theme_light_secondary</color>
    <color name="gridSelectedText">@color/md_theme_light_onSecondary</color>
    <color name="gridCage">#512f36</color>
    <fraction name="gradCageOpacity">60%</fraction>

    <color name="mainTopPanelForeground">@color/md_theme_light_onTertiary</color>
    <color name="mainTopPanelBackground">@color/md_theme_light_tertiary</color>

    <style name="LabelChipText" parent="TextAppearance.Material3.LabelMedium"/>

    <style name="KeypadRegularButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:backgroundTint">@color/md_theme_light_primaryContainer</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="MainFab" parent="Widget.Material3.FloatingActionButton.Secondary">
        <item name="tint">@color/md_theme_light_onSecondary</item>
        <item name="android:backgroundTint">@color/md_theme_light_secondary</item>
        <item name="srcCompat">@drawable/baseline_question_mark_24</item>
    </style>

    <style name="KeypadCompactButton" parent="KeypadRegularButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="KeypadButton" parent="KeypadCompactButton">
    </style>

    <style name="DialogText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="DialogText.Heading" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>