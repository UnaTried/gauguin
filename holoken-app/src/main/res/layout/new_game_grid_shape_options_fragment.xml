<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <com.holokenmod.ui.grid.GridUI
        android:id="@+id/newGridPreview"
        android:transitionName="grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/newGameGridShpeOptionsFrameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/widthslider"
    />

    <FrameLayout
        android:id="@+id/newGameGridShpeOptionsFrameLayout"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/newGridPreview"
        app:layout_constraintBottom_toBottomOf="@id/newGridPreview"
        >

        <com.google.android.material.slider.Slider
            android:id="@+id/heigthslider"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:valueFrom="3.0"
            android:valueTo="11.0"
            android:stepSize="1.0"
            android:rotation="270" />

    </FrameLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/widthslider"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@id/newGridPreview"
        app:layout_constraintEnd_toEndOf="@id/newGridPreview"
        app:layout_constraintTop_toBottomOf="@id/newGridPreview"
        app:layout_constraintBottom_toTopOf="@id/rectChip"
        android:valueFrom="3.0"
        android:valueTo="11.0"
        android:stepSize="1.0"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/newGameGridSize"
        style="@style/TextAppearance.Material3.LabelLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toEndOf="@id/widthslider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/widthslider"
        app:layout_constraintTop_toBottomOf="@id/rectChip" />

    <com.google.android.material.chip.Chip
        android:id="@+id/rectChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        style="@style/Widget.Material3.Chip.Suggestion"
        app:chipIcon="@drawable/outline_square_20"
        app:chipIconVisible="true"
        app:checkedIcon="@drawable/outline_rectangle_20"
        app:checkedIconVisible="true"
        android:text="Rect"/>

</androidx.constraintlayout.widget.ConstraintLayout>