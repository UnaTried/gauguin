<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/gridVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/heigthslider"
        app:layout_constraintEnd_toEndOf="@+id/heigthslider"
        app:layout_constraintStart_toStartOf="@+id/heigthslider"
        app:tabMode="fixed"
        app:tabInlineLabel="true">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Square"
            android:icon="@drawable/outline_square_20" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rectangle"
            android:icon="@drawable/outline_rectangle_20" />

    </com.google.android.material.tabs.TabLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/widthslider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:valueFrom="3.0"
        android:valueTo="11.0"
        android:stepSize="1.0"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/heigthslider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:valueFrom="3.0"
        android:valueTo="11.0"
        android:stepSize="1.0" />

</LinearLayout>