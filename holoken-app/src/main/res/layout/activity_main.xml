<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp">

                <TextView
                    android:id="@+id/appname"
                    style="@style/TextAppearance.Material3.LabelLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/playtime"
                    style="@style/TextAppearance.Material3.LabelLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_zero"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <com.holokenmod.ui.GridUI
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:transitionName="grid"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playtime" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add_bookmark"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:icon="@drawable/outline_bookmark_add_24"
                app:iconSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/konfettiView"
                app:layout_constraintTop_toBottomOf="@+id/gridview" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_use_bookmark"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:icon="@drawable/baseline_bookmarks_24"
                app:iconSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/button_add_bookmark"
                app:layout_constraintTop_toBottomOf="@+id/button_add_bookmark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_toogle_flaky"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:icon="@drawable/outline_flaky_24"
                app:iconSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/button_use_bookmark"
                app:layout_constraintTop_toBottomOf="@+id/button_use_bookmark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_eraser"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/eraser_solid"
                app:iconSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/button_toogle_flaky"
                app:layout_constraintTop_toBottomOf="@+id/button_toogle_flaky" />

            <FrameLayout
                android:id="@+id/container33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/gridview"
                app:layout_constraintStart_toEndOf="@+id/button_add_bookmark"
                app:layout_constraintTop_toBottomOf="@+id/gridview" />

            <nl.dionsegijn.konfetti.xml.KonfettiView
                android:id="@+id/konfettiView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            style="@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface"
            app:navigationIcon="@drawable/outline_menu_24"
            app:navigationIconTint="@color/text_button_dark"
            app:menu="@menu/bottom_app_bar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Text"
            android:title="Hint"
            app:srcCompat="@drawable/baseline_question_mark_24"
            app:layout_anchor="@id/topAppBar"
            app:fabCradleRoundedCornerRadius="20dp"
            android:alpha="1" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/mainNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header_navigation_drawer"
        app:menu="@menu/navigation_drawer"
        android:layout_gravity="left"/>

</androidx.drawerlayout.widget.DrawerLayout>