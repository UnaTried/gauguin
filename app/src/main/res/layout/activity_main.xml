<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

            <LinearLayout
                android:id="@+id/mainActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:paddingBottom="56dp">

                <RelativeLayout
                    android:id="@+id/titlecontainer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    tools:context=".ui.MainActivity">

                    <TextView style="@style/TextAppearance.Material3.LabelLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/appname"
                        android:text="@string/app_name"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"/>

                    <TextView style="@style/TextAppearance.Material3.LabelLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/playtime"
                        android:text="@string/time_zero"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/gridcontainer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp">

                    <com.holokenmod.ui.GridUI
                        android:id="@+id/gridview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout android:id="@+id/solvedcontainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:background="@drawable/menu_button"
                        android:visibility="invisible">

                        <TextView style="@style/SolvedText.Heading"
                            android:text="@string/puzzle_solved"/>

                        <TextView style="@style/SolvedText"
                            android:id="@+id/text_record_time"
                            android:text="@string/puzzle_record_time"/>
                    </LinearLayout>

                </RelativeLayout>

        <LinearLayout
            android:id="@+id/anyLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">


        <LinearLayout
                    android:id="@+id/modeButtons"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_add_bookmark"
                        app:icon="@drawable/outline_bookmark_add_24"
                        app:iconSize="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.Button.ElevatedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_use_bookmark"
                        app:icon="@drawable/baseline_bookmarks_24"
                        app:iconSize="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.Button.ElevatedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_toogle_flaky"
                        app:icon="@drawable/outline_flaky_24"
                        app:iconSize="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.Button.ElevatedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_eraser"
                        app:icon="@drawable/eraser_solid"
                        app:iconSize="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.Button.ElevatedButton" />
                </LinearLayout>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/container33"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:name="com.holokenmod.ui.KeyPadFragment" />

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            style="@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface"
            app:navigationIcon="@drawable/outline_menu_24"
            app:navigationIconTint="@color/text_button_dark"
            app:menu="@menu/bottom_app_bar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Text"
            android:title="Hint"
            app:srcCompat="@drawable/baseline_question_mark_24"
            app:layout_anchor="@id/topAppBar"
            app:fabCradleRoundedCornerRadius="20dp"
            android:alpha="1" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/mainNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header_navigation_drawer"
        app:menu="@menu/navigation_drawer"
        android:layout_gravity="left"/>

</androidx.drawerlayout.widget.DrawerLayout>